{
  "manifest_version": 3,
  "name": "Hue for Google Calendar",
  "version": "1.0.0",
  "description": "A Chrome extension to customize Google Calendar.",
  "host_permissions": [
    "https://calendar.google.com/*",
    "http://calendar.google.com/*"
  ],
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "content_scripts": [
    {
      "js": ["content/colour.js", "content/selector.js"],
      "matches": [
        "https://calendar.google.com/*",
        "http://calendar.google.com/*"
      ],
      "run_at": "document_end",
      "web_accessible_resources": ["images/*.png"]
    }
  ]
}
