{
  "manifest_version": 3,
  "name": "Hue: More Colors for Google Calendar",
  "version": "1.0.0",
  "description": "A Chrome extension designed to enhance and personalize your Google Calendar experience by providing additional customization options and improving overall user convenience.",
  "host_permissions": [
    "https://calendar.google.com/*",
    "http://calendar.google.com/*"
  ],
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "content_scripts": [
    {
      "js": ["content/colour.js", "content/selector.js"],
      "matches": [
        "https://calendar.google.com/*",
        "http://calendar.google.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/icon.png", "images/trash16.png"],
      "matches": [
        "https://calendar.google.com/*",
        "http://calendar.google.com/*"
      ]
    }
  ]
}
